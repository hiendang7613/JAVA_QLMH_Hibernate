<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/HibernateMapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class catalog="MyDB" name="pojo.Class_Subject_Student" table="CLASS_SUBJECT_STUDENT">
    <composite-id>
      <key-property name="classID"  type="string" column="CLASSID" length="5"/> 
      <key-property name="subjectID"  type="string" column="SUBJECTID" length="6"/> 
      <key-property name="studentID"  type="string" column="STUDENTID" length="8"/>    
    </composite-id>

    <property name="diemGK" type="float" column="DIEMGK"/>
    <property name="diemCK" type="float" column="DIEMCK"/>
    <property name="diemCong" type="float" column="DIEMCONG"/>
    <property name="diemTB" type="float" column="DIEMTB"/>

  </class>
</hibernate-mapping>
